{%- liquid
  assign products_to_show = section.settings.collection.all_products_count
  
  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_show = section.settings.products_to_show
  endif
-%}

{{ 'products-grid.css' | asset_url | stylesheet_tag }}
{{ 'new-card-product.css' | asset_url | stylesheet_tag }}

<script src="{{ 'variant-product-selector.js' | asset_url }}" async></script>
<script src="{{ 'mini-cart.js' | asset_url }}" async></script>


<div class="container page-container">
  <h1 class="page__title">Productos Gradiweb</h1>

  <div class="page__products">
    <ul class="page__products-list">
      {% for product in section.settings.collection.products limit: products_to_show %}
        <li class="page__product">
          {% render 'new-card-product'
            card_product: product
          %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>


{% schema %}
{
  "name": "Products grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 20,
      "step": 1,
      "default": 10,
      "label": "Products to show on grid"
    }
  ]
}
{% endschema %}